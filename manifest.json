{
  "manifest_version": 3,
  "name": "ChatGPT Web Translator",
  "version": "1.0",
  "description": "Automatically translate web pages using ChatGPT API",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "ChatGPT Translator"
  }
}
